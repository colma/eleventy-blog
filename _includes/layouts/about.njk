---
layout: layouts/base.njk
---
<div class="about-content">
    {{ content | safe }}
    
    {% if cta %}
    <div class="cta-section">
        <p class="cta-text">{{ cta }}</p>
    </div>
    {% endif %}
</div>

<style>
    .about-content {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }
    
    .cta-section {
        margin-top: 2rem;
        padding: 1.5rem;
        background-color: #f5f5f5;
        border-radius: 8px;
        text-align: center;
    }
    
    .cta-text {
        font-size: 1.2rem;
        font-weight: 500;
        margin: 0;
    }
</style> 